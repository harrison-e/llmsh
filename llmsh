#!/usr/bin/env python3

import requests, json

# Obtain OpenAI API key from `API_KEY`
api_key_file = open("API_KEY", "rt")
API_KEY = api_key_file.readline().strip()

def generate_command(description):
    url = "https://api.openai.com/v1/chat/completions"
    headers = {
        "Content-Type": "application/json",
        "Authorization": f"Bearer {API_KEY}"
    }
    data = {
        "model": "gpt-4o-mini",
        "messages": [
            {
                "role": "user",
                "content": f"Your task is to generate bash commands for a user. Your response should only include the appropriate command, in plaintext with no backticks, for the given description:\n {description}"
            }
        ]
    }

    response = requests.post(url, headers=headers, json=data)

    if response.status_code == 200:
        response_json = response.json()
        command = response_json["choices"][0]["message"]["content"].strip()
        return command 
    else:
        print(f"Error: {response.status_code} - {response.text}")
        return None

def main():
    description = input("llmsh>$: ")
    command = generate_command(description)

    if command:
        print(f"{command}")

if __name__ == "__main__":
    main()

